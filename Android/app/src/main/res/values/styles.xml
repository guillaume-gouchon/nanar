<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationDrawerHeader">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/navigation_drawer_header</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">#bbb</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/navigation_drawer_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
